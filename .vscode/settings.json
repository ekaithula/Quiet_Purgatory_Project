{
  // --- your existing prefs can live here too ---

  // Auto-save helps trigger the sync
  "files.autoSave": "onFocusChange",

  // Git quality-of-life
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "diffEditor.ignoreTrimWhitespace": false,

  // Run the autosync script on every save in THIS workspace
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": ".*",                 // run for any file save
        "isAsync": true,
        "cmd": "${workspaceFolder}/.vscode_git_autosync.sh"
      }
    ]
  }
}